<% brand ||= 'Karya'
   company ||= 'Karya App, Inc.'
   address_lines ||= ['123 Innovation Drive', 'Tech City, TC 12345']
   tagline ||= 'Empowering teams to achieve more, together.'
   socials ||= [
     { name: 'Twitter', url: '#' },
     { name: 'LinkedIn', url: '#' },
     { name: 'Facebook', url: '#' },
     { name: 'Instagram', url: '#' }
   ]
   privacy_url ||= '#'
   terms_url ||= '#'
   show_unsubscribe ||= false
   unsubscribe_url ||= '#'
%>
<div class="footer">
  <div class="footer-logo"><%= brand %></div>
  <p class="footer-text"><%= tagline %></p>
  <div class="social-links">
    <%== socials.map { |s| %Q(<a href="#{ERB::Util.html_escape(s[:url])}">#{ERB::Util.html_escape(s[:name])}</a>) }.join(' â€¢ ') %>
  </div>
  <p class="footer-text">
    <%= company %><br />
    <%= address_lines.join('<br />').html_safe %>
  </p>
  <p class="copyright">
    &copy; <%= Time.now.year %> <%= brand %>. All rights reserved.
  </p>
  <p class="footer-text" style="margin-top: 16px; font-size: 11px;">
    You're receiving this email because you created an account at <%= brand %>.<br />
    <a href="<%= privacy_url %>" style="color: #667eea; text-decoration: none;">Privacy Policy</a> | 
    <a href="<%= terms_url %>" style="color: #667eea; text-decoration: none;">Terms of Service</a>
    <% if show_unsubscribe %>
      | <a href="<%= unsubscribe_url %>" style="color:#667eea; text-decoration:none;">Unsubscribe</a>
    <% end %>
  </p>
</div>